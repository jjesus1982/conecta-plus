# ============================================
# Conecta Plus - Variáveis de Ambiente (EXEMPLO)
# Copie este arquivo para .env e configure os valores
# ============================================

# Aplicação
APP_NAME=ConectaPlus
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_VERSION=1.0.0

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# PostgreSQL
POSTGRES_USER=conecta_user
POSTGRES_PASSWORD=ALTERE_ESTA_SENHA
POSTGRES_DB=conecta_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=ALTERE_ESTA_SENHA

# Segurança
SECRET_KEY=GERE_UMA_CHAVE_SECRETA_COM_64_CARACTERES
JWT_SECRET=GERE_UMA_CHAVE_SECRETA_COM_64_CARACTERES
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Guardian (Câmeras/IA)
GUARDIAN_PORT=8001
GUARDIAN_ENABLED=true

# Integrações (configurar conforme necessário)
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
TELEGRAM_BOT_TOKEN=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# MikroTik
MIKROTIK_HOST=
MIKROTIK_PORT=8728
MIKROTIK_USER=
MIKROTIK_PASSWORD=

# Ubiquiti UniFi
UNIFI_HOST=
UNIFI_PORT=8443
UNIFI_USER=
UNIFI_PASSWORD=
UNIFI_SITE=default

# Logs
LOG_LEVEL=INFO
LOG_PATH=/opt/conecta-plus/logs
