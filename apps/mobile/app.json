{
  "expo": {
    "name": "Conecta Plus",
    "slug": "conecta-plus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "scheme": "conectaplus",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.conectaplus.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "O Conecta Plus precisa acessar a câmera para escanear QR codes e tirar fotos.",
        "NSLocationWhenInUseUsageDescription": "O Conecta Plus usa sua localização para verificar acessos.",
        "NSPhotoLibraryUsageDescription": "O Conecta Plus precisa acessar suas fotos para anexar a ocorrências.",
        "NSFaceIDUsageDescription": "O Conecta Plus usa Face ID para login seguro."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.conectaplus.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./src/assets/notification-icon.png",
          "color": "#2563eb"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acesso à câmera para escanear QR codes"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir acesso à localização"
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Permitir acesso à câmera para escanear códigos de barras"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
