# =============================================================================
# CONECTA PLUS - Configurações de Ambiente
# =============================================================================
# Copie este arquivo para .env e preencha os valores

# -----------------------------------------------------------------------------
# SEGURANÇA
# -----------------------------------------------------------------------------
SECRET_KEY=gere-uma-chave-segura-com-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# -----------------------------------------------------------------------------
# BANCO DE DADOS
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=conecta
DB_PASSWORD=sua-senha-segura-aqui
DB_NAME=conecta_plus
DB_POOL_MIN=5
DB_POOL_MAX=50

# -----------------------------------------------------------------------------
# REDIS (Rate Limiting, Cache, Sessions)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# SMTP (Envio de Emails)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@conectaplus.com.br
SMTP_TLS=true

# -----------------------------------------------------------------------------
# PIX / BOLETOS
# -----------------------------------------------------------------------------
PIX_CHAVE=
BANCO_CODIGO=077
BANCO_AGENCIA=
BANCO_CONTA=
BENEFICIARIO_NOME=
BENEFICIARIO_CNPJ=

# -----------------------------------------------------------------------------
# INTEGRAÇÕES BANCÁRIAS
# -----------------------------------------------------------------------------
CORA_CLIENT_ID=
CORA_CLIENT_SECRET=
CORA_AMBIENTE=sandbox

INTER_CLIENT_ID=
INTER_CLIENT_SECRET=
INTER_CERT_PATH=

# -----------------------------------------------------------------------------
# AMBIENTE
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# CORS (separar por vírgula)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_WEBHOOK=10

# -----------------------------------------------------------------------------
# MONITORAMENTO
# -----------------------------------------------------------------------------
SENTRY_DSN=
PROMETHEUS_ENABLED=false
