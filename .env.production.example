# ============================================
# Conecta Plus - Production Environment Variables
# ============================================
# IMPORTANT: Copy this file to .env.production and fill with real values
# NEVER commit .env.production to git!

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
VERSION=1.0.0
REGISTRY=ghcr.io/your-org

# ============================================
# URLs
# ============================================
API_URL=https://api.conectaplus.com.br
FRONTEND_URL=https://conectaplus.com.br
ALLOWED_ORIGINS=https://conectaplus.com.br,https://www.conectaplus.com.br

# ============================================
# DATABASE - PostgreSQL
# ============================================
POSTGRES_DB=conecta_db_prod
POSTGRES_USER=conecta_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!
DATABASE_URL=postgresql://conecta_prod_user:CHANGE_THIS_SECURE_PASSWORD_123!@postgres:5432/conecta_db_prod

# ============================================
# DATABASE - MongoDB
# ============================================
MONGODB_URL=mongodb://mongodb:27017/conecta_db_prod
MONGODB_DATABASE=conecta_db_prod

# ============================================
# CACHE - Redis
# ============================================
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# ============================================
# SECURITY - JWT
# ============================================
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS_abcdef123456!
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING_xyz789!
REFRESH_TOKEN_EXPIRATION=7d

# ============================================
# EMAIL / SMTP
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@conectaplus.com.br
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD
SMTP_FROM=Conecta Plus <noreply@conectaplus.com.br>

# ============================================
# STORAGE / AWS S3
# ============================================
AWS_ACCESS_KEY_ID=CHANGE_THIS
AWS_SECRET_ACCESS_KEY=CHANGE_THIS
AWS_REGION=us-east-1
AWS_S3_BUCKET=conecta-plus-prod

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# ============================================
# EXTERNAL APIS
# ============================================
OPENAI_API_KEY=sk-CHANGE_THIS
ANTHROPIC_API_KEY=sk-ant-CHANGE_THIS

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# BACKUP
# ============================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=conecta-plus-backups

# ============================================
# SSL/TLS
# ============================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ============================================
# CDN
# ============================================
CDN_URL=https://cdn.conectaplus.com.br
CDN_ENABLED=true

# ============================================
# CORS
# ============================================
CORS_ENABLED=true
CORS_ORIGINS=https://conectaplus.com.br,https://www.conectaplus.com.br

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SIGNUP=true
ENABLE_2FA=true
ENABLE_API_DOCS=false
ENABLE_ADMIN_PANEL=true

# ============================================
# PERFORMANCE
# ============================================
MAX_UPLOAD_SIZE=10MB
REQUEST_TIMEOUT=30000
CACHE_TTL=300

# ============================================
# SESSION
# ============================================
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_abcd1234!
SESSION_MAXAGE=86400000

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET=CHANGE_THIS_WEBHOOK_SECRET

# ============================================
# MISC
# ============================================
TZ=America/Sao_Paulo
LANG=pt_BR.UTF-8
